<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ESportsPlayerFinder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/imperial_red</item>
        <item name="colorPrimaryVariant">@color/lava</item>
        <item name="colorOnPrimary">@color/onyx</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/davy_grey</item>
        <item name="colorSecondaryVariant">@color/onyx</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="popupTheme">@style/MyPopUpStyle</item>

    </style>

    <style name="Theme.ESportsPlayerFinder.ActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="popupTheme">@style/MyPopUpStyle</item>
        <item name="popupMenuBackground">@color/dark_grey</item>

    </style>



    <style name="MyPopUpStyle" parent="Widget.AppCompat.Toolbar">
        <item name="popupTheme">@color/black</item>
    </style>




</resources>